    } else if (num == 4) {//孕检照护
        num = 2;
    }
    //页面加载--导航菜单设置选中状态
    $(function () {        
        $("ul[class='nav navbar-nav'] li").removeClass("active");//删除class属性。
        $("ul[class='nav navbar-nav'] > li:eq(1)").addClass("active");//设置class属性。
        $("ul[class='nav navbar-nav'] > li:eq(1)>ul>li:eq(" + num + ")").addClass("active");//设置子菜单class属性。
