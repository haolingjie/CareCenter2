
@{
    ViewBag.Title = "24小时智能照护平台";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Content/layui/css/layui.css" rel="stylesheet" />
<link href="~/Content/laypage/skin/laypage.css" rel="stylesheet" />
