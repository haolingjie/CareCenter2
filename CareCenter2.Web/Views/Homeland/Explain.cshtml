
@{
    ViewBag.Title = "公司/团队/服务基本说明";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<CareCenter2.DB.tb_Context>
<style>
    .about-text p img {
        display: block;
        margin: 0 auto;
        width: 85%;
        height: 480px;
    }

    .about-text {
        text-align: left;
        font-size: 18px;
    }

        .about-text h3 {
            font-size: 34px;
            padding-bottom: 20px;
            text-align: center;
        }

        .about-text p {
            margin: 4% auto;
            font-size: 16px;
            letter-spacing: 2px;
            line-height: 37px;
        }
    #content {
        margin-top: 150px;
    }
</style>
@{
    if (Model.Count > 0)
    {
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="single-blog blog-details two-column">
                            <div class="post-content overflow">
                                <div class="response-area">
                                    <h2 class="bold">公司/团队/服务基本说明</h2>
                                    <div class="about-text">
                                        <h3>@Model[0].Title</h3>
                                        <p>@Model[0].Explain</p>
                                        <p>@Html.Raw(Model[0].Intro)</p>
                                    </div>

                                </div><!--/Response-area-->
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    }
}


