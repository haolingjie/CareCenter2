<script>
    //页面加载--导航菜单设置选中状态
    $(function () {
        $("ul[class='nav navbar-nav'] li").removeClass("active");//删除class属性。
        $("ul[class='nav navbar-nav'] > li:eq(2)").addClass("active");//设置class属性。
        $("ul[class='nav navbar-nav'] > li:eq(2)>ul>li:eq(1)").addClass("active");//设置子菜单class属性。

       

        //jquery方法测试
        $("#tijiaoData").click(function () {
            
            //验证登录
            if (!is_login()) {
                location.href = "/Home/Login/?ReturnUrl=/PartTime/Teacher/";
            }
        });
    });
    //预约表单
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;

        //日期
        laydate.render({
            elem: '#date'
            , type: 'year'
        });
        //时间范围
        laydate.render({
            elem: '#date_range'
            , type: 'time'
            , range: true
        });

        //监听单选按钮
        form.on('radio(zhiwei)', function (data) {
            var zhiwei = data.value; //被点击的radio的value值
            if (zhiwei == '兼职') {
                $("#parttime").css('display', 'block');//显示
            } else {
                $("#parttime").css('display', 'none');//隐藏
            }
        });  

        //监听提交
        form.on('submit(save)', function (data) {

            $.ajax({
                type: "POST",
                url: "/PartTime/TeacherData",
                data: {
                    //"totalData": JSON.stringify(data.field)
                    "username": data.field.username,
                    "education": data.field.education,
                    "work": data.field.work,
                    "date_range": data.field.date_range,
                    "serve1": data.field.serve1,
                    "serve2": data.field.serve2,
                    "salary": data.field.salary,
                    "sex": data.field.sex,
                    "memo": data.field.memo
                },
                dataType: "json",
                success: function (res) {

                    if (res.Statu == 1) {
                        layer.alert(res.Msg, { skin: 'layui-layer-molv' }, function (index) {
                            location.href = res.BackUrl;
                            layer.close(index)
                        });

                    } else {
                        layer.alert(res.Msg, { skin: 'layui-layer-molv' });
                        layer.closrAll();
                    }
                }
            });
            return false;
        });

    });

      //判断当前是否登录
    function is_login() {
        var login = '@Request.IsAuthenticated';
        if (login == "False") {
            return false;
        } else {
            return true;
        }
    }
</script>